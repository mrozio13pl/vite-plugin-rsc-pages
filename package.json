{
    "name": "vite-plugin-rsc-pages",
    "version": "0.1.0",
    "description": "React Server Components (RSC) NextJS-like app router plugin for Vite.",
    "license": "MIT",
    "repository": "mrozio13pl/vite-plugin-rsc-pages",
    "author": "mrozio13pl",
    "type": "module",
    "exports": {
        ".": "./dist/index.js",
        "./package.json": "./package.json",
        "./types": "./types.d.ts",
        "./*": "./dist/*.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "types.d.ts"
    ],
    "keywords": [
        "rsc",
        "ssr",
        "react",
        "server",
        "components",
        "pages",
        "layouts",
        "next",
        "vite"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "build": "tsdown",
        "dev": "tsdown --watch",
        "lint": "publint && eslint .",
        "changelog": "chng && git add changelog.md",
        "prerelease": "pnpm lint && pnpm build",
        "release": "bumpp && pnpm publish",
        "postinstall": "simple-git-hooks"
    },
    "dependencies": {
        "radix3": "^1.1.2",
        "rsc-html-stream": "^0.0.7",
        "tinyglobby": "^0.2.15"
    },
    "devDependencies": {
        "@eslint-react/eslint-plugin": "^1.53.1",
        "@eslint/js": "^9.35.0",
        "@stylistic/eslint-plugin": "^5.3.1",
        "@types/node": "^24.3.3",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-rsc": "^0.4.29",
        "bumpp": "^10.2.3",
        "chng": "^0.1.1",
        "eslint": "^9.35.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "publint": "^0.3.12",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "simple-git-hooks": "^2.13.1",
        "tsdown": "^0.15.1",
        "type-fest": "^5.0.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.43.0",
        "vite": "^7.1.5"
    },
    "peerDependencies": {
        "@vitejs/plugin-rsc": "*",
        "react": "*",
        "react-dom": "*",
        "vite": "*"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint --fix"
    }
}